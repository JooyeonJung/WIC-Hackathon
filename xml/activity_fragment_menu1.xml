<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu1Fragment"
    android:background="@color/colorWhite">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginLeft="28dp">
        <LinearLayout
            android:layout_marginTop="37dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_user1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/oval"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#00c853"
                    android:text="오영란 님"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="13dp">

                <ImageView
                    android:id="@+id/image_user2"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/oval_copy" />

                <TextView
                    android:id="@+id/text_user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#858585"
                    android:text="우리딸 님"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/oval_copy_2" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/today"
                android:scaleType="centerCrop"
                android:background="@drawable/square_shadow"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/square_shadow"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전 복용 조합"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/button_prev"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="165dp"
                    android:gravity="center"
                    android:padding="0sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/next"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/square_shadow"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약국 접수 현황"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/button_report"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="165dp"
                    android:gravity="center"
                    android:padding="0sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/next"
                    android:textSize="35sp" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>




</LinearLayout>