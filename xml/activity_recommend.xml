<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientcolor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="오영란"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님을 위한"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="맞춤영양제 조합"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="넛츠는 식품의약품안전처가 승인한
건강기능식품만을 취급합니다."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="162dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#00c853"
                    android:text="피로/스트레스에 좋은"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pironalin"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="에스터포뮬러"
                            />
                        <TextView
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="대한민국 피로 솔루션 피로날린"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="132dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:background="@drawable/roundedgemini">
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:text="900mg x 30정"
                                />
                            <TextView

                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:gravity="end"
                                android:text="24,000원"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="홍경천추출물을 함유하고 있습니다. 홍경천은 아시아의 추운 고산지대 등에서 자생하는 바위 들꽃 허브입니다.
"
                            /></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="162dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#00c853"
                    android:text="눈 건강에 좋은"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/powerlutein"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="일양약품"
                            />
                        <TextView
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="온가족 눈건강 파워루테인A"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="132dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:background="@drawable/roundedgemini">
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:text="500mg x 90정"
                                />
                            <TextView

                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:gravity="end"
                                android:text="23,000원"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="비타민A와 루테인을 함유하고 있습니다. 노화로 인해 감소될 수 있는 황반색소밀도를 유지하여 눈 건강에 도움이 됩니다."
                            /></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="183dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#00c853"
                    android:text="소화기에 좋은"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/lactopit"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="종근당"
                            />
                        <TextView
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="프로바이오틱스 LACTO-FIT 생유산균 골드"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="132dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:background="@drawable/roundedgemini">
                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:text="2,000mg x 50포"
                                />
                            <TextView

                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#000000"
                                android:gravity="end"
                                android:text="15,000원"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#4a4a4a"
                            android:text="프로바이오틱스를 함유하고 있습니다. 프로바이오틱스와 프리바이오틱스를 함께 배합해 장내 환경 개선에 도움이 됩니다."
                            /></LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:background="#cdced1"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#ffffff"
                    android:text="취소"/>
                <Button
                    android:id="@+id/button"
                    android:layout_width="193dp"
                    android:layout_height="55dp"
                    android:background="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:text="예약하기"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>