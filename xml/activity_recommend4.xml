<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientcolor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="오영란"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님께 추천합니다!"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="선택하신 항목"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="피로/스트레스, 눈 건강, 소화기에 대한"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="답변을 토대로 도출했어요."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="107dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:text="피로/스트레스에 좋은"
                        />
                    <TextView
                        android:layout_marginLeft="77dp"
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#858585"
                        android:gravity="end"
                        android:text="최소 권장 섭취량 : 4.0mg"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="홍경천추출물 - 로사빈"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_hospital_1"/>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#00c853"
                        android:text="스트레스 완화 및 피로 개선에 도움"
                        /></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="107dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:text="눈 건강에 좋은"
                        />
                    <TextView
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#858585"
                        android:gravity="end"
                        android:text="최소 권장 섭취량 : 210.0 ug RE"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="비타민 A"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_hospital_1"/>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#00c853"
                        android:text="피로한 눈 건강에 도움"
                        /></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="127dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:text="소화기에 좋은"
                        />
                    <TextView
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#858585"
                        android:gravity="end"
                        android:text="최소 권장 섭취량 : 1.0E8 CFU"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="프로바이오틱스"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_hospital_1"/>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#00c853"
                        android:text="장내 유익균 증식 및 유해균 억제에 도움,
배변활동 원활에 도움"/></LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_width="144dp"
                android:layout_height="55dp"
                android:src="@drawable/greenshadow1"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="6sp"
                android:text="영란님의 식습관은 육류에 대한 섭취가 다소 많은 것으로 보여 영양 불균형이 걱정됩니다. 반면 과일 및 야채는 과소 섭취로 인해 특정 영양소 결핍이 우려됩니다.
일일 섭취 권장량을 토대로 적절한 식습관을 유지하는 것은 어떨까요?"/>

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_width="144dp"
                android:layout_height="55dp"
                android:src="@drawable/greenshadow2"
                />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="148dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="홍삼"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:text="아스피린을 복용 중인 오영란 님은 홍삼 섭취 시 주의가 필요합니다."
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_group"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ec473d"
                            android:text="홍삼을 먹으면 약의 분해 및 배출이 지연 되어 출혈 위험이 높아집니다."
                            /></LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="148dp"
                android:background="@drawable/roundedge"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:text="오메가3지방산"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:text="아스피린을 복용 중인 오영란 님은 오메가3지방산 섭취 시 주의가 필요합니다."
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_group"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#ec473d"
                            android:text="오메가3지방산은 혈액을 묽게 만듭니다. 혹시라도 사고가 발생할 경우 혈액응고억제제인 아스피린과 충돌해 지혈이 되지 않을 가능성이 있습니다."/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:background="#cdced1"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#ffffff"
                    android:text="다시하기"/>
                <Button
                    android:id="@+id/button"
                    android:layout_width="193dp"
                    android:layout_height="55dp"
                    android:background="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:text="다음"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>